<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.trip.accompany.model.mapper.AccompanyMapper">

	<resultMap type="accompanyDto" id="article">
		<result column="accompany_no" property="accompanyNo"/>
		<result column="accompany_title" property="accompanyTitle"/>
		<result column="accompany_content" property="accompanyContent"/>
		<result column="accompany_loc" property="accompanyLoc"/>
		<result column="accompany_date" property="accompanyDate"/>
		<result column="accompany_num" property="accompanyNum"/>
		<result column="accompany_total" property="accompanyTotal"/>
		<result column="hit" property="hit"/>
		<result column="id" property="id"/>
		<result column="nickname" property="nickname"/>
		<result column="reg_date" property="regDate"/>
	</resultMap>

	<resultMap type="accompanyDto" id="viewArticle" extends="article">
		<collection column="accompany_no" property="fileInfos" javaType="list"
					ofType="com.ssafy.trip.file.model.dto.FileInfoDto" select="fileInfoList"/>
	</resultMap>

	<select id="fileInfoList" resultMap="file">
		select save_folder, original_file, save_file
		from file_info
		where accompany_no = #{accompanyNo}
	</select>

	<resultMap type="com.ssafy.trip.file.model.dto.FileInfoDto" id="file">
		<result column="save_folder" property="saveFolder"/>
		<result column="original_file" property="originalFile"/>
		<result column="save_file" property="saveFile"/>
	</resultMap>

