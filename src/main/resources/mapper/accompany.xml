	<select id="list" parameterType="map" resultMap="viewArticle">
		select *
		from accompany
		order by reg_date desc
	</select>
	
	
 	<insert id="write" parameterType="accompanyDto">
		insert into accompany (accompany_title, accompany_content, accompany_loc, accompany_date, 
			accompany_total, id, nickname)
		values (#{accompanyTitle}, #{accompanyContent}, #{accompanyLoc}, #{accompanyDate}, 
			#{accompanyTotal}, #{id}, #{nickname})
		<selectKey resultType="int" keyProperty="accompanyNo" order="AFTER">
			select last_insert_id()
		</selectKey>
	</insert>

	<update id="modifyAccompany" parameterType="accompanyDto">
		update accompany
		set accompany_title = #{accompanyTitle}, accompany_content = #{accompanyContent},
			accompany_loc = #{accompanyLoc}, accompany_date = #{accompanyDate}, accompany_total = #{accompanyTotal}
		where accompany_no=#{accompanyNo}
	</update>

	<select id="getAccompanyByAccompanyNo" parameterType="int" resultMap="viewArticle">
		select *
		from accompany
		where accompany_no = #{accompanyNo}
	</select>
	
	<update id="updateHit" parameterType="int">
		update accompany
		set hit = hit + 1
		where accompany_no = #{accompanyNo}
	</update>

	<delete id="deleteAccompany" parameterType="int">
		delete from accompany
		where accompany_no = #{accompanyNo}
	</delete>
	
	<select id="isJoin" parameterType="map" resultType="int">
		select count(*)
		from accompany_join
		where accompany_no = #{accompanyNo} and id = #{userId}
	</select>
	
	<insert id="join" parameterType="map">
		insert into accompany_join (accompany_no, id)
		values (#{accompanyNo}, #{userId})
	</insert>	
	
	<update id="increaseAccompanyNum" parameterType="map">
		update accompany
		set accompany_num = accompany_num + 1
		where accompany_no = #{accompanyNo}
	</update>	

	<delete id="joinCancel" parameterType="map">
		delete from accompany_join
		where accompany_no = #{accompanyNo} and id = #{userId}
	</delete>

	<update id="decreaseAccompanyNum" parameterType="map">
		update accompany
		set accompany_num = accompany_num - 1
		where accompany_no = #{accompanyNo}
	</update>	
	
